<?xml version="1.0" ?>
{% block phpdoc_header %}
{% endblock phpdoc_header %}

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="{{ extension_alias }}.manager.{{ model_name_underscore }}.class">{{ manager_file }}</parameter>
    </parameters>

    <services>

        <!--Default {{ model_name }} manager-->
        <service id="{{ extension_alias }}.manager.{{ model_name_underscore }}.default" class="%{{ extension_alias }}.manager.{{ model_name_underscore }}.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument>%{{ extension_alias }}.model.{{ model_name_underscore }}.class%</argument>
        </service>

    </services>
</container>
